---
import Layout from '../layouts/Layout.astro';
import ToolBar from '../components/ToolBar.astro';
import Features from '../components/Features.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import Contents from '../components/content/Contents.astro';
---

<Layout title="Smart SDLC">
  <div class="animated-background bg-gradient-to-r from-slate-50 via-slate-200 to-slate-50 dark:from-slate-900 dark:via-slate-950 dark:to-slate-900">
    <section class="z-50 pt-2" aria-label="Navigation">
      <div>
        <ToolBar />
      </div>
    </section>

    <section class="border-primary h-[calc(100vh-48px)] border-b" aria-label="Hero Section">
      <div class="flex h-full items-center justify-center pt-10">
        <Hero />
      </div>
    </section>
  </div>

  <section class="bg-slate-200 py-10 dark:bg-slate-600" aria-label="Nx Specialist Features">
    <div>
      <Features />
    </div>
  </section>

  <section class="border-primary border-b bg-slate-50 py-10" aria-label="Video Presentation">
    <div>
      <div class="flex h-full items-center justify-center">
        <div style="overflow:hidden;margin-left:auto;margin-right:auto;border-radius:10px;width:100%;max-width:960px;position:relative">
          <div style="width:100%;padding-bottom:56.25%"></div><iframe
            width="960"
            height="540"
            title="Presentation Video"
            src="https://snappify.com/embed/d44dd44b-e200-4af6-99f2-180bcabfcee2?responsive=1&p=1&autoplay=1&b=0"
            allow="clipboard-write"
            allowfullscreen=""
            loading="lazy"
            style="background:transparent !important;position:absolute;left:0;top:0;width:100%;border:0"></iframe>
        </div>
      </div>
      <div class="mt-8 text-center">
        <a
          href="/cv"
          class="text-primary inline-flex items-center gap-2 rounded-lg bg-slate-50 px-6 py-3 text-lg font-medium transition-all hover:bg-slate-100 hover:shadow-xl dark:bg-slate-900 dark:hover:bg-slate-800"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path
              strokeLinecap="round"
              strokeLinejoin="round"
              strokeWidth={2}
              d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          View Resume
        </a>
      </div>
    </div>
  </section>

  <section class="border-primary border-b bg-[#ECDA72] py-10" aria-label="Services">
    <div class="mx-auto max-w-4xl px-4">
      <div class="grid grid-cols-2 gap-4 text-slate-900">
        <a href="#" class="rounded-lg border-l-8 border-l-slate-900 bg-white p-6 shadow-lg transition-all hover:bg-slate-50">
          <h3 class="mb-4 text-xl font-semibold">Consulting</h3>
          <div class="flex flex-col gap-2">
            <div class="flex items-center gap-2">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                ><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4"></path></svg
              >
              <span class="rounded bg-gray-100 px-3 py-1 text-sm text-gray-700 dark:bg-gray-800 dark:text-gray-300">On-Demand Consulting</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                ><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4"></path></svg
              >
              <span class="rounded bg-gray-100 px-3 py-1 text-sm text-gray-700 dark:bg-gray-800 dark:text-gray-300">Part-time Consulting</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                ><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4"></path></svg
              >
              <span class="rounded bg-gray-100 px-3 py-1 text-sm text-gray-700 dark:bg-gray-800 dark:text-gray-300">Full-time Consulting</span>
            </div>
          </div>
        </a>
        <a href="#" class="rounded-lg border-l-8 border-l-slate-900 bg-white p-6 shadow-lg transition-all hover:bg-slate-50">
          <h3 class="mb-4 text-xl font-semibold">Workshops</h3>
          <div class="flex flex-col gap-2">
            <div class="flex items-center gap-2">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                ><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4"></path></svg
              >
              <span class="rounded bg-gray-100 px-3 py-1 text-sm text-gray-700 dark:bg-gray-800 dark:text-gray-300">Nx from Adoption</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                ><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4"></path></svg
              >
              <span class="rounded bg-gray-100 px-3 py-1 text-sm text-gray-700 dark:bg-gray-800 dark:text-gray-300">Nx Advanced</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                ><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4"></path></svg
              >
              <span class="rounded bg-gray-100 px-3 py-1 text-sm text-gray-700 dark:bg-gray-800 dark:text-gray-300">Micro Frontend with Module Federation</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                ><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4"></path></svg
              >
              <span class="rounded bg-gray-100 px-3 py-1 text-sm text-gray-700 dark:bg-gray-800 dark:text-gray-300">Micro Frontend with Single Spa</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                ><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4"></path></svg
              >
              <span class="rounded bg-gray-100 px-3 py-1 text-sm text-gray-700 dark:bg-gray-800 dark:text-gray-300">Design Systems with Storybook</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                ><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4"></path></svg
              >
              <span class="rounded bg-gray-100 px-3 py-1 text-sm text-gray-700 dark:bg-gray-800 dark:text-gray-300">e2e Testing with Cypress/Playwright</span>
            </div>
          </div>
        </a>
      </div>
    </div>
  </section>

  <section id="content" class="bg-slate-200 py-10 dark:bg-slate-600" aria-label="Content Library">
    <div>
      <Contents />
    </div>
  </section>

  <section class="border-primary border-t" aria-label="Page Footer">
    <div>
      <Footer />
    </div>
  </section>
</Layout>
<style>
  section > :first-child {
    @apply container mx-auto;
  }

  .animated-background {
    background-size: 400%;

    -webkit-animation: animation 6s ease infinite;
    -moz-animation: animation 6s ease infinite;
    animation: animation 6s ease infinite;
  }

  @keyframes animation {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
</style>
