---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Jonathan Gelin">
	<main>
		<h1 class="text-5xl">
			Hi, I'm <span
				class="underline decoration-green-500 underline-offset-8 decoration-1"
				><span class="text-green-500">J</span>onathan <span
					class="text-green-500">G</span
				>elin</span
			>
