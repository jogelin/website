---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-slate-50 text-slate-900 transition-colors duration-300 dark:bg-slate-900 dark:text-slate-100">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/icons/strategy-development.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Calendly badge widget begin -->
    <link href="https://assets.calendly.com/assets/external/widget.css" rel="stylesheet" />
    <script is:inline src="https://assets.calendly.com/assets/external/widget.js" async></script>
    <script is:inline>
      window.onload = function () {
        Calendly.initBadgeWidget({
          url: 'https://calendly.com/gelin-jonathan/30min',
          text: 'ðŸ’¬ Book a 30-Minute Chat',
          color: '#0069ff',
          textColor: '#ffffff',
          branding: true,
        });
      };
    </script>
    <!-- Calendly badge widget end -->
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  :global(.calendly-badge-widget .calendly-badge-content) {
    @apply bg-green-500 !important;
    @apply text-slate-900 !important;
    @apply text-xl !important;
    @apply p-4 !important;
    @apply rounded-md !important;
  }

  @media (max-width: 768px) {
    :global(.calendly-badge-widget .calendly-badge-content) {
      @apply text-lg !important;
      @apply p-3 !important;
    }
  }
</style>
