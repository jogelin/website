---
interface Props {
  user: string;
  slug: string;
  title?: string;
  defaultTab?: string;
  height?: number;
}
const { user, slug, title = 'CodePen', defaultTab = 'result', height = 400 } = Astro.props;
---

<div class="codepen-embed">
  <iframe
    height={height}
    title={title}
    src={`https://codepen.io/${user}/embed/${slug}?default-tab=${defaultTab}&theme-id=dark`}
    loading="lazy"
    allowfullscreen>
  </iframe>
</div>

<style>
  .codepen-embed {
    margin: 2rem 0;
    border-radius: 8px;
    overflow: hidden;
  }
  .codepen-embed iframe {
    width: 100%;
    border: 0;
  }
</style>
