---
interface Props {
  url: string;
  title?: string;
  description?: string;
  image?: string;
}
const { url, title, description, image } = Astro.props;
const domain = new URL(url).hostname;
---

<a href={url} class="link-preview" target="_blank" rel="noopener noreferrer">
  {image && <img src={image} alt="" class="preview-image" loading="lazy" />}
  <div class="preview-content">
    <span class="preview-domain">{domain}</span>
    {title && <h4 class="preview-title">{title}</h4>}
    {description && <p class="preview-description">{description}</p>}
  </div>
</a>

<style>
  .link-preview {
    display: flex;
    border: 1px solid #334155;
    border-radius: 8px;
    overflow: hidden;
    margin: 1.5rem 0;
    text-decoration: none;
    transition: border-color 0.2s;
    background: #1e293b;
  }

  .link-preview:hover {
    border-color: #10b981;
  }

  .preview-image {
    width: 120px;
    min-height: 100px;
    object-fit: cover;
    flex-shrink: 0;
  }

  .preview-content {
    padding: 1rem;
    min-width: 0;
  }

  .preview-domain {
    font-size: 12px;
    color: #64748b;
    font-family: 'JetBrains Mono', monospace;
  }

  .preview-title {
    margin: 0.5rem 0;
    color: #e2e8f0;
    font-size: 16px;
    font-weight: 600;
    line-height: 1.3;
  }

  .preview-description {
    color: #94a3b8;
    font-size: 14px;
    margin: 0;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  @media (max-width: 480px) {
    .link-preview {
      flex-direction: column;
    }
    .preview-image {
      width: 100%;
      height: 120px;
    }
  }
</style>
