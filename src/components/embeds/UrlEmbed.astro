---
import { getOgMetadata } from '../../utils/og-metadata';

interface Props {
  url: string;
}

const { url } = Astro.props;

// Fetch OG metadata at build time
const metadata = await getOgMetadata(url);

// Parse URL for domain info
const urlObj = new URL(url);
const domain = urlObj.hostname.replace('www.', '');

// Determine brand color based on domain
const getBrandColor = (domain: string): string => {
  if (domain.includes('github.com') || domain.includes('github.blog'))
    return '#24292f';
  if (domain.includes('nx.dev')) return '#143055';
  if (domain.includes('twitter.com') || domain.includes('x.com'))
    return '#1da1f2';
  if (domain.includes('linkedin.com')) return '#0077b5';
  if (domain.includes('youtube.com') || domain.includes('youtu.be'))
    return '#ff0000';
  if (domain.includes('npmjs.com')) return '#cb3837';
  if (domain.includes('martinfowler.com')) return '#64748b';
  if (domain.includes('modelcontextprotocol.io')) return '#9b8ac4';
  if (domain.includes('anthropic.com')) return '#d4a574';
  if (domain.includes('google.com') || domain.includes('workspace.google.com'))
    return '#4285f4';
  if (domain.includes('bmad-method.org')) return '#9b8ac4';
  if (domain.includes('conventionalcommits.org')) return '#fe5196';
  if (domain.includes('swagger.io')) return '#85ea2d';
  if (domain.includes('mermaid.js.org')) return '#ff3670';
  if (domain.includes('v0.dev')) return '#000000';
  if (domain.includes('renovatebot.com')) return '#1a1f6c';
  if (domain.includes('coderabbit.ai')) return '#ff6b35';
  return '#64748b';
};

const brandColor = getBrandColor(domain);

// Truncate description to ~120 chars
const truncateDescription = (text: string, maxLength = 120): string => {
  if (!text || text.length <= maxLength) return text;
  return text.slice(0, maxLength).replace(/\s+\S*$/, '') + '...';
};

const description = truncateDescription(metadata.description);
const hasImage = !!metadata.image;
---

<a href={url} class="url-embed" target="_blank" rel="noopener noreferrer">
  <div class="embed-image">
    {
      hasImage ? (
        <img
          src={metadata.image}
          alt=""
          loading="lazy"
          onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
        />
        <div class="embed-placeholder" style="display: none;">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
          </svg>
        </div>
      ) : (
        <div class="embed-placeholder">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
          </svg>
        </div>
      )
    }
  </div>
  <div class="embed-content">
    <span class="embed-site" style={`color: ${brandColor};`}>
      {metadata.siteName || domain}
    </span>
    <span class="embed-title">{metadata.title}</span>
  </div>
</a>

<style>
  .url-embed {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 10px 14px;
    margin: 1rem 0;
    background: #ffffff;
    border: 1px solid #e2e8f0;
    border-radius: 6px;
    text-decoration: none;
    transition: all 0.2s;
  }

  .url-embed:hover {
    border-color: #cbd5e1;
    background: #f8fafc;
  }

  .embed-content {
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .embed-site {
    font-family: 'JetBrains Mono', monospace;
    font-size: 11px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.3px;
  }

  .embed-title {
    font-size: 14px;
    font-weight: 500;
    color: #1e293b;
    line-height: 1.3;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .url-embed:hover .embed-title {
    color: #0f172a;
  }

  .embed-image {
    flex-shrink: 0;
    width: 64px;
    height: 64px;
    border-radius: 4px;
    overflow: hidden;
    background: #f1f5f9;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .embed-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .embed-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    color: #94a3b8;
  }

  .embed-placeholder svg {
    width: 24px;
    height: 24px;
  }

  @media (max-width: 560px) {
    .embed-title {
      font-size: 13px;
    }
  }
</style>
