---
import type { Post } from '../loaders/hasnode/schemas';
import Card from './Card.astro';

interface Props {
  post: Post
}

const { post } = Astro.props;
---

<Card
    type="ARTICLE"
    date={post.publishedAt}
    picture={post.coverImage?.url ?? ''}
    href={`https://gelinjo.hashnode.dev/${post.slug}`}
    title={post.title}
    description={post.subtitle}
    readTime={post.readTimeInMinutes}
  />