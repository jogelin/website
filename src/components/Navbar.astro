---
interface Props {
  activeLink?: 'home' | 'blog' | 'resume';
}

const { activeLink = 'home' } = Astro.props;
---

<header class="navbar">
  <a href="/" class="logo">
    <span class="logo-brackets">&lt;/&gt;</span>
    smartSDLC.dev
  </a>

  <!-- Desktop nav -->
  <nav class="nav nav--desktop">
    <a href="/" class:list={{ active: activeLink === 'home' }}>Home</a>
    <a href="/#content" class:list={{ active: activeLink === 'blog' }}>Blog</a>
    <a href="/cv" class:list={{ active: activeLink === 'resume' }}>Resume</a>
  </nav>

  <!-- Burger button -->
  <button class="burger" aria-label="Toggle menu" aria-expanded="false">
    <span class="burger__line"></span>
    <span class="burger__line"></span>
    <span class="burger__line"></span>
  </button>

  <!-- Mobile nav overlay -->
  <div class="nav-overlay">
    <nav class="nav nav--mobile">
      <a href="/" class:list={{ active: activeLink === 'home' }}>Home</a>
      <a href="/#content" class:list={{ active: activeLink === 'blog' }}>Blog</a>
      <a href="/cv" class:list={{ active: activeLink === 'resume' }}>Resume</a>
    </nav>
  </div>
</header>

<script>
  const burger = document.querySelector('.burger');
  const overlay = document.querySelector('.nav-overlay');

  burger?.addEventListener('click', () => {
    const isOpen = burger.classList.toggle('burger--open');
    overlay?.classList.toggle('nav-overlay--open');
    burger.setAttribute('aria-expanded', String(isOpen));
  });

  // Close menu when clicking a link
  overlay?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      burger?.classList.remove('burger--open');
      overlay?.classList.remove('nav-overlay--open');
      burger?.setAttribute('aria-expanded', 'false');
    });
  });
</script>

<style>
  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px 24px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 10px;
    font-family: 'JetBrains Mono', monospace;
    font-weight: 600;
    font-size: 15px;
    color: #e2e8f0;
    text-decoration: none;
    z-index: 102;
  }

  .logo-brackets {
    color: #10b981;
    font-weight: 700;
  }

  .nav--desktop {
    display: flex;
    gap: 24px;
  }

  .nav a {
    color: rgba(226, 232, 240, 0.7);
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    transition: color 0.2s;
  }

  .nav a:hover,
  .nav a.active {
    color: #e2e8f0;
  }

  /* Burger button */
  .burger {
    display: none;
    flex-direction: column;
    justify-content: center;
    gap: 5px;
    width: 32px;
    height: 32px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 4px;
    z-index: 102;
  }

  .burger__line {
    width: 100%;
    height: 2px;
    background: #e2e8f0;
    border-radius: 2px;
    transition: transform 0.3s, opacity 0.3s;
  }

  .burger--open .burger__line:nth-child(1) {
    transform: translateY(7px) rotate(45deg);
  }

  .burger--open .burger__line:nth-child(2) {
    opacity: 0;
  }

  .burger--open .burger__line:nth-child(3) {
    transform: translateY(-7px) rotate(-45deg);
  }

  /* Mobile overlay */
  .nav-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(15, 17, 23, 0.98);
    z-index: 101;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s, visibility 0.3s;
  }

  .nav-overlay--open {
    opacity: 1;
    visibility: visible;
  }

  .nav--mobile {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    gap: 32px;
  }

  .nav--mobile a {
    font-size: 24px;
    font-weight: 600;
  }

  @media (max-width: 600px) {
    .navbar {
      padding: 12px 16px;
    }

    .logo {
      font-size: 14px;
    }
  }

  @media (max-width: 480px) {
    .nav--desktop {
      display: none;
    }

    .burger {
      display: flex;
    }

    .nav-overlay {
      display: block;
    }
  }
</style>
