---
import type { Post } from '../../loaders/hasnode/schemas';
import { isInstanceOfArticle } from '../../loaders/hasnode/schemas';
import Card from '../Card.astro';

interface Props {
  post: Post;
}

const { post } = Astro.props;
const type = isInstanceOfArticle(post) ? 'ARTICLE' : 'NOTE';
---

<Card
  type={type}
  startDate={post.publishedAt}
  picture={post.coverImage?.url ?? ''}
  links={[{ name: 'Read More', href: `https://gelinjo.hashnode.dev/${post.slug}` }]}
  title={post.title}
  description={post.subtitle}
/>
