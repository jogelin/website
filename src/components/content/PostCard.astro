---
import type { BlogPost } from '../../content/blog/_schema';
import Card from '../Card.astro';

interface Props {
  post: {
    id: string;
    data: BlogPost;
  };
}

const { post } = Astro.props;
const type = post.data.type === 'article' ? 'ARTICLE' : 'NOTE';
---

<Card
  type={type}
  startDate={post.data.publishedAt.toISOString()}
  picture={post.data.coverImage ?? ''}
  links={[{ name: 'Read More', href: `/blog/${post.id}` }]}
  title={post.data.title}
  description={post.data.subtitle}
/>
