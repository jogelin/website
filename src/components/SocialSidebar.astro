<div class="social-sidebar">
  {socialLinks.map((social) => (
    <a href={social.href} class="social-icon" aria-label={social.name} target="_blank" rel="noopener">
      <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
