<style>
  .hero-section {
    background: linear-gradient(135deg, #0f1117 0%, #1a1d2e 25%, #0f1117 50%, #151828 75%, #0f1117 100%);
    background-size: 400% 400%;
    animation: gradient-shift 15s ease infinite;
    min-height: 100vh;
    position: relative;
    overflow: hidden;
  }

  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background:
      radial-gradient(ellipse at 20% 20%, rgba(6, 182, 212, 0.08) 0%, transparent 50%),
      radial-gradient(ellipse at 80% 80%, rgba(168, 85, 247, 0.08) 0%, transparent 50%),
      radial-gradient(ellipse at 50% 50%, rgba(251, 191, 36, 0.05) 0%, transparent 60%);
    pointer-events: none;
  }

  @keyframes gradient-shift {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  /* ========== AVAILABILITY BAR (STICKY) ========== */
  .availability-bar {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(251, 191, 36, 0.08);
    border-bottom: 1px solid rgba(251, 191, 36, 0.2);
    padding: 10px 16px;
    text-align: center;
    backdrop-filter: blur(10px);
  }

  .availability-bar__text {
    font-family: 'JetBrains Mono', monospace;
    font-size: 13px;
    font-weight: 600;
    color: #fbbf24;
    display: inline-flex;
    align-items: center;
    gap: 8px;
  }

  .availability-bar__dot {
    width: 8px;
    height: 8px;
    background: #22c55e;
    border-radius: 50%;
    animation: pulse-dot 2s ease-in-out infinite;
  }

  .availability-bar__link {
    color: #fbbf24;
    text-decoration: underline;
    transition: color 0.2s;
  }

  .availability-bar__link:hover {
    color: #fcd34d;
  }

  @keyframes pulse-dot {
    0%,
    100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.5;
      transform: scale(0.9);
    }
  }

  /* ========== HEADER ========== */
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px 24px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 10px;
    font-family: 'JetBrains Mono', monospace;
    font-weight: 600;
    font-size: 15px;
    color: #e2e8f0;
    text-decoration: none;
  }

  .logo-icon {
    width: 24px;
    height: 24px;
  }

  .nav {
    display: flex;
    gap: 24px;
  }

  .nav a {
    color: rgba(226, 232, 240, 0.7);
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    transition: color 0.2s;
  }

  .nav a:hover,
  .nav a.active {
    color: #e2e8f0;
  }

  /* ========== SOCIAL SIDEBAR ========== */
  .social-sidebar {
    position: fixed;
    right: 16px;
    top: 50%;
    transform: translateY(-50%);
    z-index: 50;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(30, 41, 59, 0.8);
    color: #94a3b8;
    transition: all 0.2s;
    backdrop-filter: blur(10px);
  }

  .social-icon:hover {
    background: rgba(30, 41, 59, 1);
    color: #e2e8f0;
    transform: scale(1.1);
  }

  /* ========== HERO ========== */
  .hero {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 48px;
    padding: 48px 24px;
    max-width: 1100px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .diagram-container {
    flex: 1;
  }

  /* Left Column */
  .hero-content {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .hero-photo {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    object-fit: cover;
    object-position: center top;
    border: 3px solid rgba(16, 185, 129, 0.5);
    box-shadow: 0 0 24px rgba(16, 185, 129, 0.2);
  }

  .hero-title {
    font-size: clamp(32px, 5vw, 44px);
    font-weight: 800;
    line-height: 1.1;
    letter-spacing: -1px;
    color: #ffffff;
  }

  .hero-title .hl {
    color: #10b981;
  }

  .hero-subtitle {
    font-size: clamp(16px, 2.5vw, 18px);
    color: rgba(226, 232, 240, 0.75);
    line-height: 1.7;
    max-width: 480px;
  }

  .hero-subtitle .hl {
    color: #10b981;
    font-weight: 600;
  }

  /* Tags */
  .hero-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    margin-top: 4px;
  }

  .hero-tag {
    display: flex;
    align-items: center;
    gap: 8px;
    font-family: 'JetBrains Mono', monospace;
    font-size: 13px;
    font-weight: 500;
    padding: 10px 16px;
    background: rgba(16, 185, 129, 0.08);
    border: 1px solid rgba(16, 185, 129, 0.25);
    border-radius: 24px;
    color: #10b981;
    transition: all 0.2s;
  }

  .hero-tag:hover {
    background: rgba(16, 185, 129, 0.12);
    border-color: rgba(16, 185, 129, 0.4);
  }

  .tag-icon {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
  }

  /* CTA */
  .hero-cta {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    margin-top: 12px;
  }

  .btn {
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    font-weight: 600;
    padding: 14px 24px;
    border-radius: 10px;
    text-decoration: none;
    transition: all 0.2s;
    cursor: pointer;
    text-align: center;
  }

  .btn-primary {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: white;
    border: none;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(16, 185, 129, 0.35);
  }

  .btn-secondary {
    background: transparent;
    color: rgba(226, 232, 240, 0.8);
    border: 1px solid rgba(226, 232, 240, 0.2);
  }

  .btn-secondary:hover {
    border-color: rgba(226, 232, 240, 0.4);
    color: #e2e8f0;
  }

  /* ========== DIAGRAM ========== */
  .diagram-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
  }

  .layer {
    border-radius: 14px;
    padding: 20px 32px;
    width: 100%;
    max-width: 380px;
    text-align: center;
    backdrop-filter: blur(10px);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .layer:hover {
    transform: translateY(-2px);
  }

  .layer__label {
    font-family: 'JetBrains Mono', monospace;
    font-size: 10px;
    font-weight: 600;
    letter-spacing: 2px;
    text-transform: uppercase;
    margin-bottom: 4px;
  }

  .layer__title {
    font-size: 16px;
    font-weight: 700;
    letter-spacing: -0.3px;
  }

  /* Layer colors */
  .layer--dx {
    background: linear-gradient(135deg, rgba(251, 191, 36, 0.1) 0%, rgba(245, 158, 11, 0.05) 100%);
    border: 1px solid rgba(251, 191, 36, 0.3);
    box-shadow: 0 0 30px rgba(251, 191, 36, 0.08);
  }
  .layer--dx:hover {
    box-shadow: 0 0 40px rgba(251, 191, 36, 0.15);
  }
  .layer--dx .layer__label {
    color: rgba(251, 191, 36, 0.7);
  }
  .layer--dx .layer__title {
    color: #fbbf24;
  }

  .layer--ai {
    background: linear-gradient(135deg, rgba(168, 85, 247, 0.1) 0%, rgba(139, 92, 246, 0.05) 100%);
    border: 1px solid rgba(168, 85, 247, 0.3);
    box-shadow: 0 0 30px rgba(168, 85, 247, 0.08);
  }
  .layer--ai:hover {
    box-shadow: 0 0 40px rgba(168, 85, 247, 0.15);
  }
  .layer--ai .layer__label {
    color: rgba(168, 85, 247, 0.7);
  }
  .layer--ai .layer__title {
    color: #a855f7;
  }

  .layer--foundation {
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.1) 0%, rgba(34, 211, 238, 0.05) 100%);
    border: 1px solid rgba(6, 182, 212, 0.3);
    box-shadow: 0 0 30px rgba(6, 182, 212, 0.08);
  }
  .layer--foundation:hover {
    box-shadow: 0 0 40px rgba(6, 182, 212, 0.15);
  }
  .layer--foundation .layer__label {
    color: rgba(6, 182, 212, 0.7);
  }
  .layer--foundation .layer__title {
    color: #06b6d4;
  }

  /* Arrows */
  .arrow {
    opacity: 0.6;
    animation: pulse-arrow 3s ease-in-out infinite;
  }
  .arrow--delay {
    animation-delay: 0.5s;
  }

  @keyframes pulse-arrow {
    0%,
    100% {
      opacity: 0.4;
    }
    50% {
      opacity: 0.8;
    }
  }

  /* ========== RESPONSIVE ========== */
  @media (max-width: 900px) {
    .hero {
      flex-direction: column;
      gap: 32px;
      padding: 24px 16px;
      text-align: center;
    }

    .hero-content {
      align-items: center;
    }

    .hero-subtitle {
      max-width: 100%;
    }

    .hero-tags {
      justify-content: center;
    }

    .hero-cta {
      justify-content: center;
    }

    .diagram-container {
      width: 100%;
      margin-top: 16px;
      padding: 0 8px;
    }

    .layer {
      max-width: 100%;
      padding: 16px 24px;
    }

    .layer__title {
      font-size: 15px;
    }

    .social-sidebar {
      display: none;
    }
  }

  @media (max-width: 600px) {
    .header {
      padding: 10px 12px;
    }

    .nav {
      gap: 12px;
    }

    .nav a {
      font-size: 13px;
    }

    .logo {
      font-size: 14px;
    }

    .logo-icon {
      width: 20px;
      height: 20px;
    }

    .hero {
      padding: 20px 12px;
      gap: 24px;
    }

    .hero-photo {
      width: 70px;
      height: 70px;
    }

    .hero-tag {
      font-size: 11px;
      padding: 6px 12px;
    }

    .tag-icon {
      width: 14px;
      height: 14px;
    }

    .btn {
      flex: 1;
      padding: 14px 20px;
      white-space: nowrap;
      text-align: center;
    }

    .availability-bar {
      padding: 8px 12px;
    }

    .availability-bar__text {
      font-size: 11px;
    }

    .diagram-container {
      padding: 0 4px;
    }

    .layer {
      padding: 14px 20px;
    }

    .layer__label {
      font-size: 9px;
    }

    .layer__title {
      font-size: 14px;
    }

    .hero-cta {
      flex-wrap: nowrap;
    }
  }

  @media (max-width: 480px) {
    .nav {
      display: none;
    }
  }
</style>
