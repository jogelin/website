---
import cv from '../content/cv/cv.json';
import AvailabilityBar from './AvailabilityBar.astro';
import Navbar from './Navbar.astro';
import SocialSidebar from './SocialSidebar.astro';

const recommendations = cv.recommendations.slice(0, 7);
---

<section class="hero-section">
  <AvailabilityBar />
  <Navbar activeLink="home" />
  <SocialSidebar />

  <!-- Hero Content -->
  <div class="hero">
    <!-- Left: Content -->
    <div class="hero-content">
      <!-- Photo -->
      <img src="/avatar.png" alt="Jonathan Gelin" class="hero-photo" />

      <h1 class="hero-title">
        Build on <span class="hl">Foundations</span>,<br />Scale with <span class="hl">AI</span>.
      </h1>

      <p class="hero-subtitle">
        I design <span class="hl">AI-powered workflows</span> and <span class="hl">engineering foundations</span> that make teams faster, happier, and more consistent.
      </p>

      <!-- Tags with logos -->
      <div class="hero-tags">
        <!-- Claude Code -->
        <span class="hero-tag">
          <img src="/icons/claude.svg" alt="" class="tag-icon" />
          Claude Code Plugins
        </span>

        <!-- Nx -->
        <span class="hero-tag">
          <img src="/icons/nx.svg" alt="" class="tag-icon" />
          Nx Ecosystem
        </span>
      </div>

      <!-- CTA Buttons -->
      <div class="hero-cta">
        <a href="#" onclick="Calendly.showPopupWidget('https://calendly.com/gelin-jonathan/30min');return false;" class="btn btn-primary">Get in Touch</a>
        <a href="/cv" class="btn btn-secondary">View Resume</a>
      </div>
    </div>

    <!-- Right: Diagram -->
    <div class="diagram-container">
      <a href="#developer-experience" class="layer layer--dx">
        <div class="layer__label">Outcome</div>
        <h3 class="layer__title">Developer Experience</h3>
        <div class="layer__features">
          <span class="feature-tag feature-tag--dx">Auto-Fix</span>
          <span class="feature-tag feature-tag--dx">Support</span>
          <span class="feature-tag feature-tag--dx">IDE</span>
          <span class="feature-tag feature-tag--dx">Training</span>
        </div>
      </a>

      <svg class="arrow" width="20" height="20" viewBox="0 0 24 24" fill="none">
        <path d="M12 20V4M12 4L6 10M12 4L18 10" stroke="url(#g1)" stroke-width="2" stroke-linecap="round"></path>
        <defs>
          <linearGradient id="g1" x1="12" y1="20" x2="12" y2="4">
            <stop stop-color="#a855f7"></stop>
            <stop offset="1" stop-color="#fbbf24"></stop>
          </linearGradient>
        </defs>
      </svg>

      <a href="#ai-orchestration" class="layer layer--ai">
        <div class="layer__label">Enabler</div>
        <h3 class="layer__title">AI Orchestration</h3>
        <div class="layer__features">
          <span class="feature-tag feature-tag--ai">AI Framework</span>
          <span class="feature-tag feature-tag--ai">Contextual</span>
          <span class="feature-tag feature-tag--ai">Memory</span>
          <span class="feature-tag feature-tag--ai">Multi-AI</span>
        </div>
      </a>

      <svg class="arrow arrow--delay" width="20" height="20" viewBox="0 0 24 24" fill="none">
        <path d="M12 20V4M12 4L6 10M12 4L18 10" stroke="url(#g2)" stroke-width="2" stroke-linecap="round"></path>
        <defs>
          <linearGradient id="g2" x1="12" y1="20" x2="12" y2="4">
            <stop stop-color="#06b6d4"></stop>
            <stop offset="1" stop-color="#a855f7"></stop>
          </linearGradient>
        </defs>
      </svg>

      <a href="#foundations" class="layer layer--foundation">
        <div class="layer__label">Architecture</div>
        <h3 class="layer__title">Engineering Foundations</h3>
        <div class="layer__features">
          <span class="feature-tag feature-tag--foundation">Build System</span>
          <span class="feature-tag feature-tag--foundation">Quality</span>
          <span class="feature-tag feature-tag--foundation">CI/CD</span>
          <span class="feature-tag feature-tag--foundation">Release</span>
        </div>
      </a>
    </div>
  </div>

  <!-- Testimonials -->
  <div class="hero-testimonials">
    <div class="testimonials-track">
      {
        recommendations.map((rec, index) => (
          <a href="/cv#recommendations" class:list={['testimonial', { active: index === 0 }]} data-index={index}>
            <p class="testimonial-content">« {rec.content.split('\n')[0]} »</p>
            <div class="testimonial-author">
              <img src={rec.picture} alt={rec.name} class="testimonial-avatar" />
              <span class="testimonial-name">{rec.name}</span>
              <span class="testimonial-sep">·</span>
              <span class="testimonial-role">{rec.role}</span>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</section>

<script>
  let currentIndex = 0;
  const testimonials = document.querySelectorAll('.hero-testimonials .testimonial');

  function showTestimonial(index: number) {
    testimonials.forEach((t, i) => {
      t.classList.toggle('active', i === index);
    });
    currentIndex = index;
  }

  function nextTestimonial() {
    const next = (currentIndex + 1) % testimonials.length;
    showTestimonial(next);
  }

  setInterval(nextTestimonial, 5000);
</script>

<style>
  .hero-section {
    background: linear-gradient(135deg, #0f1117 0%, #1a1d2e 25%, #0f1117 50%, #151828 75%, #0f1117 100%);
    background-size: 400% 400%;
    animation: gradient-shift 15s ease infinite;
    min-height: 100vh;
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background:
      radial-gradient(ellipse at 20% 20%, rgba(6, 182, 212, 0.08) 0%, transparent 50%),
      radial-gradient(ellipse at 80% 80%, rgba(168, 85, 247, 0.08) 0%, transparent 50%),
      radial-gradient(ellipse at 50% 50%, rgba(251, 191, 36, 0.05) 0%, transparent 60%);
    pointer-events: none;
  }

  @keyframes gradient-shift {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  /* ========== FLEX LAYOUT FOR CHILD COMPONENTS ========== */
  :global(.availability-bar-spacer) {
    width: 100%;
    flex-shrink: 0;
  }

  :global(.navbar) {
    width: 100%;
    max-width: 1200px;
    align-self: center;
    flex-shrink: 0;
  }

  /* ========== HERO ========== */
  .hero {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 48px;
    padding: 48px 24px;
    max-width: 1100px;
    margin: 0 auto;
    margin-top: auto;
    width: 100%;
    align-self: center;
    position: relative;
    z-index: 1;
  }

  .diagram-container {
    flex: 1;
  }

  /* Left Column */
  .hero-content {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .hero-photo {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    object-fit: cover;
    object-position: center top;
    border: 3px solid rgba(16, 185, 129, 0.5);
    box-shadow: 0 0 24px rgba(16, 185, 129, 0.2);
  }

  .hero-title {
    font-size: clamp(32px, 5vw, 44px);
    font-weight: 800;
    line-height: 1.1;
    letter-spacing: -1px;
    color: #ffffff;
  }

  .hero-title .hl {
    color: #10b981;
  }

  .hero-subtitle {
    font-size: clamp(16px, 2.5vw, 18px);
    color: rgba(226, 232, 240, 0.75);
    line-height: 1.7;
    max-width: 480px;
  }

  .hero-subtitle .hl {
    color: #10b981;
    font-weight: 600;
  }

  /* Tags */
  .hero-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    margin-top: 4px;
  }

  .hero-tag {
    display: flex;
    align-items: center;
    gap: 8px;
    font-family: 'JetBrains Mono', monospace;
    font-size: 13px;
    font-weight: 500;
    padding: 10px 16px;
    background: rgba(16, 185, 129, 0.08);
    border: 1px solid rgba(16, 185, 129, 0.25);
    border-radius: 24px;
    color: #10b981;
    transition: all 0.2s;
  }

  .hero-tag:hover {
    background: rgba(16, 185, 129, 0.12);
    border-color: rgba(16, 185, 129, 0.4);
  }

  .tag-icon {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
  }

  /* CTA */
  .hero-cta {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    margin-top: 12px;
  }

  .btn {
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    font-weight: 600;
    padding: 14px 24px;
    border-radius: 10px;
    text-decoration: none;
    transition: all 0.2s;
    cursor: pointer;
    text-align: center;
  }

  .btn-primary {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: white;
    border: none;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(16, 185, 129, 0.35);
  }

  .btn-secondary {
    background: transparent;
    color: rgba(226, 232, 240, 0.8);
    border: 1px solid rgba(226, 232, 240, 0.2);
  }

  .btn-secondary:hover {
    border-color: rgba(226, 232, 240, 0.4);
    color: #e2e8f0;
  }

  /* ========== DIAGRAM ========== */
  .diagram-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
  }

  .layer {
    display: block;
    border-radius: 14px;
    padding: 20px 32px;
    width: 100%;
    max-width: 380px;
    text-align: center;
    backdrop-filter: blur(10px);
    text-decoration: none;
    cursor: pointer;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .layer:hover {
    transform: translateY(-2px);
  }

  .layer__label {
    font-family: 'JetBrains Mono', monospace;
    font-size: 10px;
    font-weight: 600;
    letter-spacing: 2px;
    text-transform: uppercase;
    margin-bottom: 4px;
  }

  .layer__title {
    font-size: 16px;
    font-weight: 700;
    letter-spacing: -0.3px;
  }

  .layer__features {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 6px;
    margin-top: 12px;
  }

  .feature-tag {
    font-family: 'JetBrains Mono', monospace;
    font-size: 9px;
    font-weight: 500;
    padding: 4px 8px;
    border-radius: 12px;
    white-space: nowrap;
  }

  .feature-tag--dx {
    background: rgba(251, 191, 36, 0.15);
    color: #fbbf24;
    border: 1px solid rgba(251, 191, 36, 0.3);
  }

  .feature-tag--ai {
    background: rgba(168, 85, 247, 0.15);
    color: #a855f7;
    border: 1px solid rgba(168, 85, 247, 0.3);
  }

  .feature-tag--foundation {
    background: rgba(6, 182, 212, 0.15);
    color: #06b6d4;
    border: 1px solid rgba(6, 182, 212, 0.3);
  }

  /* Layer colors */
  .layer--dx {
    background: linear-gradient(135deg, rgba(251, 191, 36, 0.1) 0%, rgba(245, 158, 11, 0.05) 100%);
    border: 1px solid rgba(251, 191, 36, 0.3);
    box-shadow: 0 0 30px rgba(251, 191, 36, 0.08);
  }
  .layer--dx:hover {
    box-shadow: 0 0 40px rgba(251, 191, 36, 0.15);
  }
  .layer--dx .layer__label {
    color: rgba(251, 191, 36, 0.7);
  }
  .layer--dx .layer__title {
    color: #fbbf24;
  }

  .layer--ai {
    background: linear-gradient(135deg, rgba(168, 85, 247, 0.1) 0%, rgba(139, 92, 246, 0.05) 100%);
    border: 1px solid rgba(168, 85, 247, 0.3);
    box-shadow: 0 0 30px rgba(168, 85, 247, 0.08);
  }
  .layer--ai:hover {
    box-shadow: 0 0 40px rgba(168, 85, 247, 0.15);
  }
  .layer--ai .layer__label {
    color: rgba(168, 85, 247, 0.7);
  }
  .layer--ai .layer__title {
    color: #a855f7;
  }

  .layer--foundation {
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.1) 0%, rgba(34, 211, 238, 0.05) 100%);
    border: 1px solid rgba(6, 182, 212, 0.3);
    box-shadow: 0 0 30px rgba(6, 182, 212, 0.08);
  }
  .layer--foundation:hover {
    box-shadow: 0 0 40px rgba(6, 182, 212, 0.15);
  }
  .layer--foundation .layer__label {
    color: rgba(6, 182, 212, 0.7);
  }
  .layer--foundation .layer__title {
    color: #06b6d4;
  }

  /* Arrows */
  .arrow {
    opacity: 0.6;
    animation: pulse-arrow 3s ease-in-out infinite;
  }
  .arrow--delay {
    animation-delay: 0.5s;
  }

  @keyframes pulse-arrow {
    0%,
    100% {
      opacity: 0.4;
    }
    50% {
      opacity: 0.8;
    }
  }

  /* ========== TESTIMONIALS ========== */
  .hero-testimonials {
    width: 100%;
    max-width: 700px;
    align-self: center;
    margin: 0 auto;
    margin-bottom: auto;
    flex-shrink: 0;
    padding: 40px 24px 60px;
    text-align: center;
  }

  .testimonials-track {
    position: relative;
    min-height: 160px;
  }

  .testimonial {
    position: absolute;
    inset: 0;
    opacity: 0;
    transform: translateY(10px);
    transition:
      opacity 0.6s ease,
      transform 0.6s ease;
    pointer-events: none;
    text-decoration: none;
    display: flex;
    flex-direction: column;
    cursor: pointer;
  }

  .testimonial:hover .testimonial-content {
    color: rgba(226, 232, 240, 0.9);
  }

  .testimonial.active {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }

  .testimonial-content {
    font-size: 16px;
    line-height: 1.7;
    color: rgba(226, 232, 240, 0.7);
    font-style: italic;
    margin-bottom: 16px;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    transition: color 0.2s;
  }

  .testimonial-author {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    flex-wrap: wrap;
  }

  .testimonial-avatar {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid rgba(16, 185, 129, 0.3);
  }

  .testimonial-name {
    font-size: 14px;
    font-weight: 600;
    color: #e2e8f0;
  }

  .testimonial-sep {
    color: rgba(226, 232, 240, 0.3);
  }

  .testimonial-role {
    font-size: 13px;
    color: rgba(226, 232, 240, 0.5);
  }

  /* ========== RESPONSIVE ========== */
  @media (max-width: 900px) {
    .hero {
      flex-direction: column;
      gap: 32px;
      padding: 24px 16px;
      text-align: center;
      justify-content: center;
    }

    .hero-content {
      align-items: center;
    }

    .hero-subtitle {
      max-width: 100%;
    }

    .hero-tags {
      justify-content: center;
    }

    .hero-cta {
      justify-content: center;
    }

    .diagram-container {
      width: 100%;
      margin-top: 16px;
      padding: 0 8px;
    }

    .layer {
      max-width: 100%;
      padding: 16px 24px;
    }

    .layer__title {
      font-size: 15px;
    }

    .feature-tag {
      font-size: 8px;
      padding: 3px 6px;
    }
  }

  @media (max-width: 600px) {
    .hero {
      padding: 20px 12px;
      gap: 24px;
    }

    .hero-photo {
      width: 70px;
      height: 70px;
    }

    .hero-tag {
      font-size: 11px;
      padding: 6px 12px;
    }

    .tag-icon {
      width: 14px;
      height: 14px;
    }

    .btn {
      flex: 1;
      padding: 14px 20px;
      white-space: nowrap;
      text-align: center;
    }

    .diagram-container {
      padding: 0 4px;
    }

    .layer {
      padding: 14px 20px;
    }

    .layer__label {
      font-size: 9px;
    }

    .layer__title {
      font-size: 14px;
    }

    .hero-cta {
      flex-wrap: nowrap;
    }
  }
</style>
